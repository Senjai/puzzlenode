- content_for :header_bottom do
  :javascript
    $(function(){
      $('#logo').addClass('loading');
      $('#login').html("Redirecting ...").click(function(e){ e.preventDefault(); });
    });

  %meta{:'http-equiv' => "REFRESH", :content => "1;url=/auth/github"}

#redirect
  %h1 Redirecting to Github for login

  %h3 You will be returned to puzzlenode after you login

  = link_to "Click here if you are not redirected to github", "/auth/github"