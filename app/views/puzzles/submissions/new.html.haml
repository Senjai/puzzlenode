- content_for :header_bottom do
  :javascript
    $(function(){
      $('form.new_submission').submit(function(){
        $('#logo').addClass('loading');
      });
    });

#puzzle
  %h1= link_to @puzzle.name, puzzle_path(@puzzle)

  = form_for @submission, :url => puzzle_submissions_path(@puzzle), 
    :html => {:multipart => true} do |f|
  
    %h3 Select & upload your solution file
    
    = f.file_field :file
    = f.submit "Submit my solution", :class => "clean-orange"
          
  %p 
    The solution file is the output from your program, not the program source code. 
  
  #action
    = link_to "< Back to puzzle", puzzle_path(@puzzle)