#puzzle
  %h1= link_to @puzzle.name, puzzle_path(@puzzle)

  = form_for @submission, :url => puzzle_submissions_path(@puzzle), 
    :html => {:multipart => true} do |f|
  
    .step.one
      .container
        %h3 1. Select your solution file
        .action
          = image_tag "icons/file.png"
          = f.file_field :file
    .step.two
      .container
        %h3 2. Submit your solution
        .action
          = image_tag "icons/upload.png"
          = f.submit "Submit my solution"
          
  #action
    = link_to "< Back to puzzle", puzzle_path(@puzzle)