#puzzles
  - @puzzles.each do |puzzle|
    //= link_to puzzle_path(puzzle) do
    .puzzle
      = link_to puzzle.name, puzzle_path(puzzle)
      
      .description
        .action
          - if puzzle.answered_correctly? current_user
            %button.retro{:'data-url' => puzzle_comments_path(puzzle)}
              = image_tag "icons/comment_small.png"
              %span View Comments
          - else
            %button.retro{:'data-url' => puzzle_path(puzzle)}
              = image_tag "icons/upload_small.png"
              %span View Puzzle
        = puzzle.short_description
        .clearfix