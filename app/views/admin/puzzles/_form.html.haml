= form_for @puzzle, :url => url, :html => {:class => "admin"} do |f|
  %h2= @puzzle.name || "New Puzzle"

  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :created_by
    %br
    = f.text_field :created_by
  %p
    = f.label :created_by_url
    %br
    = f.text_field :created_by_url
  %p
    = f.label :released_on
    %br
    = f.date_select :released_on
  %p
    = f.label :tag_list, "Tags"
    %br
    = f.text_field :tag_list
  %p
    = f.label :short_description
    %br
    = f.text_field :short_description
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :notice
    %br
    = f.text_area :notice

  /TODO: Add nested fields and markdown preview

  %p.controls
    = f.submit
    = link_to "Cancel", admin_puzzles_path